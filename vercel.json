{
    "version": 2,
    "framework": "laravel",
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [
        {
            "src": "/(css|js|images|storage|vendor)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/(favicon\\.ico|robots\\.txt)",
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_NAME": "Laravel",
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://your-app-name.vercel.app",
        
        "DB_CONNECTION": "mysql",
        "DB_PORT": "3306",
        
        "FILESYSTEM_DISK": "public",
        "CACHE_DRIVER": "file",
        "SESSION_DRIVER": "cookie",
        "SESSION_LIFETIME": "120",
        
        "LOG_CHANNEL": "stack",
        "LOG_LEVEL": "debug"
    },
    "buildCommand": "./vercel-build.sh"
}
